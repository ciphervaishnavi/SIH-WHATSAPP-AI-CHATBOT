{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/webhook",
      "dest": "/index.js"
    },
    {
      "src": "/health",
      "dest": "/index.js"
    },
    {
      "src": "/debug-env",
      "dest": "/index.js"
    },
    {
      "src": "/style.css",
      "dest": "/public/style.css",
      "headers": {
        "Content-Type": "text/css"
      }
    },
    {
      "src": "/script.js", 
      "dest": "/public/script.js",
      "headers": {
        "Content-Type": "application/javascript"
      }
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*\\.(css|js|html|png|jpg|ico|svg))",
      "dest": "/public/$1"
    }
  ],
  "functions": {
    "index.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*\\.css)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css"
        }
      ]
    },
    {
      "source": "/(.*\\.js)",
      "headers": [
        {
          "key": "Content-Type", 
          "value": "application/javascript"
        }
      ]
    }
  ]
}