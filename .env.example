# Twilio Configuration
# Get these from your Twilio Console (https://console.twilio.com)
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here

# Twilio WhatsApp Number (from Twilio WhatsApp Sandbox or approved number)
# Format: whatsapp:+14155238886
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Hugging Face API Key (optional, for LLM responses)
# Get free API key from https://huggingface.co/settings/tokens
# Leave empty to use free tier (limited requests)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Port (Heroku will set this automatically)
PORT=3000