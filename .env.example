# Facebook Business WhatsApp API Configuration
# Get these from Meta for Developers (https://developers.facebook.com)
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here
FACEBOOK_PHONE_NUMBER_ID=your_phone_number_id_here
FACEBOOK_VERIFY_TOKEN=your_custom_verify_token_here
FACEBOOK_APP_SECRET=your_app_secret_here

# Google LLM API Key (recommended for best responses)
# Get API key from https://ai.google.dev/gemini-api/docs/api-key
# This provides the most robust health responses in all languages
GOOGLE_LLM_API_KEY=your_google_api_key_here

# Hugging Face API Key (optional, for LLM responses)
# Get free API key from https://huggingface.co/settings/tokens
# Leave empty to use free tier (limited requests)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Port (hosting platforms will set this automatically)
PORT=3000